#version 430 core

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

struct GrassBlade{
	vec3 position;
	vec4 direction;
};

layout(std430, binding = 0) buffer GrassBuffer{
	GrassBlade blades[];
};

uniform float time;

void main(){
	uint id = gl_GlobalInvocationID.x;

	blades[id].position.y = sin(time + id * 0.1) * 0.2;

}